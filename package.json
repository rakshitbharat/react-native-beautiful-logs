{
  "name": "react-native-beautiful-logs",
  "version": "1.0.0",
  "description": "A beautiful, feature-rich logging library for React Native applications with colored output and file persistence",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "jest --config jest.config.cjs",
    "test:watch": "jest --watch",
    "demo": "npm test src/__tests__/demo.test.ts --no-jest-cache",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,md}\"",
    "prepare": "husky",
    "pre-commit": "lint-staged",
    "typecheck": "tsc --noEmit",
    "validate": "npm run lint && npm run typecheck && npm run test",
    "ci": "npm run validate && npm run build",
    "build:validate": "node scripts/test-build.mjs",
    "clean": "rm -rf lib coverage",
    "prebuild": "npm run clean",
    "dev": "npm run build:watch"
  },
  "dependencies": {
    "moment": "^2.30.1",
    "react": "^18.3.1",
    "react-native": "^0.73.11",
    "react-native-blob-util": "^0.19.6"
  },
  "devDependencies": {
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^12.9.0",
    "@types/jest": "^29.5.14",
    "@types/react": "^18.3.18",
    "@types/react-native": "^0.73.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-native": "^4.1.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "ts-jest": "^29.2.6",
    "typescript": "^5.5.0"
  },
  "resolutions": {
    "react": "^18.3.1"
  },
  "overrides": {
    "react": "^18.3.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
