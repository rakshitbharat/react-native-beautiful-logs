{
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "react-native",
    "types": ["node", "react-native", "jest"],
    "lib": ["es2017"],
    "sourceMap": true,
    "rootDir": "./src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "moduleResolution": "node",
    "baseUrl": "./"
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*", "lib", "coverage"]
}
